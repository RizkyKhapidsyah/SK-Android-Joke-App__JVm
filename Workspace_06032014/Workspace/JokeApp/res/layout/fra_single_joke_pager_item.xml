<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttons_back" >

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="#c63b3b" />

    <TextView
        android:id="@+id/by_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/author_text"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="By:"
        android:textColor="#c63b3b" />

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fra_single_joke_pager_item_scrollview"
        android:layout_alignParentRight="true"
        android:paddingBottom="5dp"
        android:paddingLeft="2dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="#c63b3b" />

    <ScrollView
        android:id="@+id/fra_single_joke_pager_item_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/joke_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:textColor="#222222" />
    </ScrollView>

</RelativeLayout>